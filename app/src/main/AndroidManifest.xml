<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grocerygo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities_and_frags.ActivityHost"></activity>
        <activity android:name=".activities_and_frags.ActivityProfile" />
        <activity android:name=".activities_and_frags.ActivitySplashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities_and_frags.ActivityRegister" />
        <activity android:name=".activities_and_frags.ActivityLogin" />
        <activity android:name=".activities_and_frags.ActivityDetails" />
        <activity android:name=".activities_and_frags.ActivityProducts" />
        <activity android:name=".activities_and_frags.FragHome" />
    </application>

</manifest>