<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/frame_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/app_toolbar" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

<!--        ICON START-->
        <ImageView
            android:padding="0dp"
            android:layout_margin="0dp"
            android:id="@+id/image_view_icon_backdrop_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_brightness_1_black_24dp"/>
        <ImageView
            android:padding="0dp"
            android:layout_margin="0dp"
            android:id="@+id/image_view_icon_backdrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:tint="@color/colorPrimary" />
        <ImageView
            app:layout_constraintTop_toTopOf="@id/image_view_icon_backdrop"
            app:layout_constraintBottom_toBottomOf="@id/image_view_icon_backdrop"
            app:layout_constraintStart_toStartOf="@id/image_view_icon_backdrop"
            app:layout_constraintEnd_toEndOf="@id/image_view_icon_backdrop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_whatshot_black_24dp"
            android:tint="@color/colorPrimaryLight" />
<!--        ICON END-->

        <ImageView
            android:id="@+id/image_view_card_icon_logos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_icon_backdrop"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_card_logo"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:layout_constraintTop_toBottomOf="@id/image_view_card_icon_logos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Card Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_cardholder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_cardholder_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Cardholder Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_expiration_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_expiration_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Exp. Date" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/button_payment_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_usual_background"
            android:text="Submit"
            android:textSize="24sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>