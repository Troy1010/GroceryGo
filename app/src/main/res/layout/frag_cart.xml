<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grocerygo.activities_and_frags.FragCart">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CART"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/button_delete_first_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete First Item"
        android:textSize="22sp" />

    <Button
        app:layout_constraintEnd_toStartOf="@id/button_delete_first_item"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/button_print_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print Products"
        android:textSize="22sp" />

    <Button
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_delete_first_item"
        android:id="@+id/button_update_first_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update first product"
        android:textSize="22sp" />
</androidx.constraintlayout.widget.ConstraintLayout>
