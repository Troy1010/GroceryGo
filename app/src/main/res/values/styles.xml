<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:buttonStyle">@style/ColorButton</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name ="android:colorBackground">@color/colorBackground</item>
    </style>
    <style name="NothingStyle" parent="Theme.AppCompat.Light.DarkActionBar"/>
    <style name="ColorButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/TextVsColorPrimary</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="ShadeButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorBackgroundAccent</item>
        <item name="android:textColor">@color/TextVsBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="MyTextViewStyle" parent="AppTheme">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/TextVsBackground</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>