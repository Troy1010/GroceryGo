        <item name="android:buttonStyle">@style/ColorButton</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="GenericTheme.PurpleDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!--    light/dark DEFINED-->
        <item name="colorPrimaryLight">#b453f5</item>
        <item name="colorPrimaryDark">#33084d</item>
        <item name="colorPrimaryDarkBackup">#33084d</item> <!-- for some reason, the toolbar couldn't find colorPrimaryDark-->
